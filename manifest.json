{
  "manifest_version": 3,
  "name": "Link Context - Smart Link Safety & Preview",
  "version": "1.0.0",
  "description": "Advanced link safety analysis with real-time threat detection and previews",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["error-handler.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Context Settings"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}   